    {
      "title": "Verified",
      "properties": {
        "kind": {
          "const": "verified"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "year": {
          "$ref": "sharedDefinitions#/definitions/year"
        },
        "type": {
          "type": "string",
          "enum": ["scientific", "dissemination"]
        },
        "eventType": {
          "type": "string",
          "enum": [
            "Conference",
            "Institute",
            "Workshop / Symposium",
            "School",
            "Media",
            "Public Event",
            "Outreach"
          ]
        },
        "event": {
          "type": "string"
        }
      },
      "required": ["kind", "title", "year", "eventType", "event"],
      "additionalProperties": false
    },
    {
      "title": "Draft",
      "properties": {
        "kind": {
          "const": "draft"
        },
        "title": {
          "type": "string"
        },
        "year": {
          "type": "string"
        },
        "eventType": {
          "type": "string"
        },
        "event": {
          "type": "string"
        }
      },
      "required": ["kind"],
      "additionalProperties": false
    }
  ]
}
