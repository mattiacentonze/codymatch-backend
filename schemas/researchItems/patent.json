{
  "$id": "patent",
  "type": "object",
  "oneOf": [
    {
      "title": "Verified",
      "properties": {
        "kind": {
          "const": "verified"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "assignees": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "minItems": 1
        },
        "applicationNumber": {
          "type": "string",
          "minLength": 1
        },
        "filingDate": {
          "type": "string",
          "format": "date"
        },
        "publicationNumber": {
          "type": "string"
        },
        "publicationDate": {
          "type": "string",
          "format": "date"
        },
        "granted": {
          "type": "boolean"
        },
        "patentNumber": {
          "type": "string",
          "minLength": 1
        },
        "issueDate": {
          "type": "string",
          "format": "date"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "required": [
        "kind",
        "title",
        "assignees",
        "applicationNumber",
        "filingDate",
        "granted"
      ],
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": { "granted": { "const": true } }
          },
          "then": {
            "required": ["patentNumber", "issueDate"]
          }
        }
      ]
    },
    {
      "title": "Draft",
      "properties": {
        "kind": {
          "const": "draft"
        },
        "title": {
          "type": "string"
        },
        "assignees": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "applicationNumber": {
          "type": "string"
        },
        "filingDate": {
          "type": "string"
        },
        "publicationNumber": {
          "type": "string"
        },
        "publicationDate": {
          "type": "string"
        },
        "granted": {
          "type": "boolean"
        },
        "patentNumber": {
          "type": "string"
        },
        "issueDate": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["kind"],
      "additionalProperties": false
    }
  ]
}
